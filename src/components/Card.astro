---
interface Props {
  variant?: 'default' | 'elevated' | 'outlined';
  padding?: 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  variant = 'default',
  padding = 'md',
  class: className,
} = Astro.props;

const classes = [
  'card',
  `card--${variant}`,
  `card--padding-${padding}`,
  className,
].filter(Boolean).join(' ');
---

<article class={classes}>
  <slot />
</article>
