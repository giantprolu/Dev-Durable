---
interface Props {
  siteName?: string;
  siteDescription?: string;
}

const {
  siteName = 'AC-ingiénierie',
  siteDescription = 'Accompagnement en développement durable, RSE et transition écologique pour les entreprises engagées.'
} = Astro.props;

const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: 'Contenu',
    links: [
      { label: 'Articles', href: '/articles' },
      { label: 'À propos', href: '/a-propos' },
      { label: 'Contact', href: '/contact' },
    ],
  },
  {
    title: 'Légal',
    links: [
      { label: 'Mentions légales', href: '/mentions-legales' },
      { label: 'Politique de confidentialité', href: '/confidentialite' },
      { label: 'Accessibilité', href: '/accessibilite' },
    ],
  },
];
---

<footer class="footer" role="contentinfo">
  <div class="footer__container">
    <div class="footer__main">
      <!-- Brand Section -->
      <div class="footer__brand">
        <a href="/" class="footer__logo" aria-label={`${siteName} - Retour à l'accueil`}>
          <span class="footer__logo-text">{siteName}</span>
        </a>
        <p class="footer__tagline">
          {siteDescription}
        </p>
      </div>

      <!-- Navigation Links -->
      <nav class="footer__nav" aria-label="Navigation secondaire">
        {footerLinks.map((section) => (
          <div class="footer__nav-section">
            <h3 class="footer__nav-title">{section.title}</h3>
            <ul class="footer__nav-list" role="list">
              {section.links.map((link) => (
                <li>
                  <a href={link.href} class="footer__nav-link">
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </nav>
    </div>

    <!-- Bottom Section -->
    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {currentYear} {siteName}. Tous droits réservés.
      </p>
    </div>
  </div>
</footer>
