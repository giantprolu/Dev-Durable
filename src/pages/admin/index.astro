---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { validateSession, parseSessionCookie } from '../../lib/auth';
import { prisma } from '../../lib/prisma';

// Auth check
const cookieHeader = Astro.request.headers.get('cookie');
const token = parseSessionCookie(cookieHeader);

if (!token) {
  return Astro.redirect('/admin/login');
}

const user = await validateSession(token);
if (!user) {
  return Astro.redirect('/admin/login');
}

// Get stats
const articleCount = await prisma.$queryRaw`SELECT COUNT(*) FROM "User"`.catch(() => 0);
---

<Layout title="Administration">
  <div class="admin-dashboard">
    <header class="admin-header">
      <div class="admin-header__left">
        <h1>Administration</h1>
        <p>Bienvenue, {user.name || user.email}</p>
      </div>
      <div class="admin-header__right">
        <button id="logout-btn" class="btn btn--outline btn--sm">
          Déconnexion
        </button>
      </div>
    </header>

    <div class="admin-content">
      <section class="admin-section">
        <h2>Gestion du contenu</h2>
        <p class="admin-section__desc">
          Pour modifier le contenu du site, éditez directement les fichiers dans le dossier <code>src/content/</code>.
        </p>

        <div class="admin-cards">
          <article class="admin-card">
            <h3>Articles</h3>
            <p>Fichiers Markdown dans <code>src/content/articles/</code></p>
            <ul>
              <li>Créez un fichier <code>.md</code> pour chaque article</li>
              <li>Ajoutez le frontmatter (title, description, date, tags, image)</li>
              <li>Écrivez le contenu en Markdown</li>
            </ul>
          </article>

          <article class="admin-card">
            <h3>Pages</h3>
            <p>Fichiers JSON dans <code>src/content/pages/</code></p>
            <ul>
              <li><code>home.json</code> - Contenu de la page d'accueil</li>
              <li><code>about.json</code> - Contenu de la page À propos</li>
            </ul>
          </article>

          <article class="admin-card">
            <h3>Paramètres</h3>
            <p>Fichier <code>src/content/settings/general.json</code></p>
            <ul>
              <li>Nom du site</li>
              <li>Description</li>
              <li>Email de contact</li>
            </ul>
          </article>
        </div>
      </section>

      <section class="admin-section">
        <h2>Informations compte</h2>
        <dl class="admin-info">
          <dt>Email</dt>
          <dd>{user.email}</dd>
          <dt>Rôle</dt>
          <dd>{user.role}</dd>
          <dt>Compte créé le</dt>
          <dd>{user.createdAt.toLocaleDateString('fr-FR')}</dd>
        </dl>
      </section>
    </div>
  </div>
</Layout>

<style>
  .admin-dashboard {
    min-height: calc(100vh - 200px);
    padding: var(--space-8) var(--section-padding-x);
    max-width: var(--container-xl);
    margin-inline: auto;
  }

  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-6);
    border-bottom: var(--border-width-thick) solid var(--color-primary);
  }

  .admin-header h1 {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--space-1);
  }

  .admin-header p {
    color: var(--color-text-secondary);
    margin-bottom: 0;
  }

  .admin-section {
    margin-bottom: var(--space-10);
  }

  .admin-section h2 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-2);
  }

  .admin-section__desc {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
  }

  .admin-section__desc code {
    background: var(--color-bg-secondary);
    padding: 0.1em 0.4em;
    font-size: 0.9em;
  }

  .admin-cards {
    display: grid;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .admin-cards {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .admin-card {
    padding: var(--space-5);
    border: var(--border-width) solid var(--color-border-light);
  }

  .admin-card h3 {
    font-size: var(--font-size-lg);
    color: var(--color-primary);
    margin-bottom: var(--space-2);
  }

  .admin-card p {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-3);
  }

  .admin-card code {
    background: var(--color-bg-secondary);
    padding: 0.1em 0.3em;
    font-size: 0.85em;
  }

  .admin-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .admin-card li {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    padding-left: var(--space-4);
    position: relative;
    margin-bottom: var(--space-2);
  }

  .admin-card li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.6em;
    width: 6px;
    height: 2px;
    background: var(--color-primary);
  }

  .admin-info {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-2) var(--space-6);
  }

  .admin-info dt {
    font-weight: var(--font-weight-medium);
    color: var(--color-text-secondary);
  }

  .admin-info dd {
    margin: 0;
  }
</style>

<script>
  document.getElementById('logout-btn')?.addEventListener('click', async () => {
    try {
      await fetch('/api/auth/logout', { method: 'POST' });
      window.location.href = '/admin/login';
    } catch (error) {
      console.error('Logout error:', error);
    }
  });
</script>
