---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';
import { validateSession, parseSessionCookie } from '../../lib/auth';
import { prisma } from '../../lib/prisma';

// Auth check
const cookieHeader = Astro.request.headers.get('cookie');
const token = parseSessionCookie(cookieHeader);

if (!token) {
  return Astro.redirect('/admin/login');
}

const user = await validateSession(token);
if (!user) {
  return Astro.redirect('/admin/login');
}

// Get stats
const articleCount = await prisma.article.count();
const mediaCount = await prisma.media.count();

// Get services for dynamic listing
const services = await prisma.service.findMany({
  orderBy: { order: 'asc' },
  select: { title: true },
});
const serviceCount = services.length;
---

<Layout title="Administration">
  <div class="admin-dashboard">
    <header class="admin-header">
      <div class="admin-header__left">
        <h1>Administration</h1>
        <p>Bienvenue, {user.name || user.email}</p>
      </div>
      <div class="admin-header__right">
        <button id="logout-btn" class="btn btn--outline btn--sm">
          Déconnexion
        </button>
      </div>
    </header>

    <div class="admin-content">
      <section class="admin-section">
        <h2>Gestion du contenu</h2>
        <p class="admin-section__desc">
          Gérez le contenu de votre site depuis cette interface.
        </p>

        <div class="admin-cards">
          <a href="/admin/articles" class="admin-card admin-card--link">
            <div class="admin-card__icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/><polyline points="10 9 9 9 8 9"/></svg>
            </div>
            <h3>Articles</h3>
            <p class="admin-card__count">{articleCount} article{articleCount !== 1 ? 's' : ''}</p>
            <p>Créer, modifier et supprimer des articles de blog</p>
          </a>

          <a href="/admin/pages" class="admin-card admin-card--link">
            <div class="admin-card__icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/></svg>
            </div>
            <h3>Pages</h3>
            <p>Modifier le contenu des pages du site</p>
            <ul>
              <li>Page d'accueil</li>
              <li>Page À propos</li>
            </ul>
          </a>

          <a href="/admin/services" class="admin-card admin-card--link">
            <div class="admin-card__icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="7" width="20" height="14" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/></svg>
            </div>
            <h3>Services</h3>
            <p class="admin-card__count">{serviceCount} service{serviceCount !== 1 ? 's' : ''}</p>
            <p>Modifier les services proposés</p>
            {services.length > 0 ? (
              <ul>
                {services.map(service => (
                  <li>{service.title}</li>
                ))}
              </ul>
            ) : (
              <p class="admin-card__empty">Aucun service créé</p>
            )}
          </a>

          <a href="/admin/media" class="admin-card admin-card--link">
            <div class="admin-card__icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg>
            </div>
            <h3>Médiathèque</h3>
            <p class="admin-card__count">{mediaCount} fichier{mediaCount !== 1 ? 's' : ''}</p>
            <p>Gérer les images et fichiers</p>
          </a>

          <a href="/admin/settings" class="admin-card admin-card--link">
            <div class="admin-card__icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
            </div>
            <h3>Paramètres</h3>
            <p>Configurer les informations du site</p>
            <ul>
              <li>Nom et description</li>
              <li>Informations de contact</li>
              <li>Réseaux sociaux</li>
            </ul>
          </a>
        </div>
      </section>

      <section class="admin-section">
        <h2>Informations compte</h2>
        <dl class="admin-info">
          <dt>Email</dt>
          <dd>{user.email}</dd>
          <dt>Rôle</dt>
          <dd>{user.role}</dd>
          <dt>Compte créé le</dt>
          <dd>{user.createdAt.toLocaleDateString('fr-FR')}</dd>
        </dl>
      </section>

      <section class="admin-section">
        <h2>Modifier mon mot de passe</h2>
        <form id="change-password-form" class="password-form">
          <div class="form-group">
            <label for="currentPassword">Mot de passe actuel</label>
            <input type="password" id="currentPassword" name="currentPassword" required />
          </div>
          <div class="form-group">
            <label for="newPassword">Nouveau mot de passe</label>
            <input type="password" id="newPassword" name="newPassword" required minlength="8" />
            <small>Minimum 8 caractères</small>
          </div>
          <div class="form-group">
            <label for="confirmPassword">Confirmer le nouveau mot de passe</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required minlength="8" />
          </div>
          <div id="password-message" class="form-message" style="display: none;"></div>
          <button type="submit" class="btn btn--primary">Modifier le mot de passe</button>
        </form>
      </section>
    </div>
  </div>
</Layout>

<style>
  .admin-dashboard {
    min-height: calc(100vh - 200px);
    padding: var(--space-8) var(--section-padding-x);
    max-width: var(--container-xl);
    margin-inline: auto;
  }

  .admin-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-6);
    border-bottom: var(--border-width-thick) solid var(--color-primary);
  }

  .admin-header h1 {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--space-1);
  }

  .admin-header p {
    color: var(--color-text-secondary);
    margin-bottom: 0;
  }

  .admin-section {
    margin-bottom: var(--space-10);
  }

  .admin-section h2 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--space-2);
    color: var(--color-primary);
    position: relative;
    padding-bottom: var(--space-2);
  }

  .admin-section h2::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 3px;
    background: var(--color-primary);
  }

  .admin-section__desc {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
  }

  .admin-section__desc code {
    background: var(--color-bg-secondary);
    padding: 0.1em 0.4em;
    font-size: 0.9em;
  }

  .admin-cards {
    display: grid;
    gap: var(--space-4);
  }

  @media (min-width: 480px) {
    .admin-cards {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 768px) {
    .admin-cards {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--space-5);
    }
  }

  @media (min-width: 1280px) {
    .admin-cards {
      grid-template-columns: repeat(5, 1fr);
      gap: var(--space-6);
    }
  }

  .admin-card {
    padding: var(--space-4);
    border: var(--border-width-thick) solid var(--color-ink);
    background: var(--color-white);
    position: relative;
    overflow: hidden;
  }

  .admin-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--color-primary);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s ease;
  }

  .admin-card--link {
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .admin-card--link:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .admin-card--link:hover::before {
    transform: scaleX(1);
  }

  .admin-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    margin-bottom: var(--space-4);
    color: var(--color-white);
    background: var(--color-primary);
    border: var(--border-width-thick) solid var(--color-ink);
  }

  .admin-card--link:hover .admin-card__icon {
    background: var(--color-ink);
    color: var(--color-white);
  }

  .admin-card h3 {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-ink);
    margin-bottom: var(--space-2);
    text-transform: uppercase;
    letter-spacing: var(--letter-spacing-wide);
  }

  .admin-card__count {
    font-size: var(--font-size-3xl) !important;
    font-weight: var(--font-weight-bold);
    color: var(--color-primary) !important;
    margin-bottom: var(--space-2) !important;
    line-height: 1;
  }

  .admin-card p {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-3);
  }

  .admin-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
    margin-top: var(--space-3);
    padding-top: var(--space-3);
    border-top: 1px solid var(--color-border-light);
  }

  .admin-card li {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    padding-left: var(--space-4);
    position: relative;
    margin-bottom: var(--space-2);
  }

  .admin-card li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.6em;
    width: 8px;
    height: 2px;
    background: var(--color-primary);
  }

  .admin-card__empty {
    font-style: italic;
    opacity: 0.7;
  }

  .admin-info {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-2) var(--space-6);
  }

  /* Mobile responsive - Admin Dashboard */
  @media (max-width: 479px) {
    .admin-dashboard {
      padding: var(--space-4) var(--space-3);
    }

    .admin-header {
      flex-direction: column;
      gap: var(--space-3);
      margin-bottom: var(--space-6);
      padding-bottom: var(--space-4);
    }

    .admin-header h1 {
      font-size: var(--font-size-xl);
    }

    .admin-header__right {
      width: 100%;
    }

    .admin-header__right .btn {
      width: 100%;
      justify-content: center;
    }

    .admin-section {
      margin-bottom: var(--space-8);
    }

    .admin-section h2 {
      font-size: var(--font-size-lg);
    }

    .admin-cards {
      grid-template-columns: 1fr;
      gap: var(--space-3);
    }

    .admin-card {
      padding: var(--space-4);
    }

    .admin-card__icon {
      width: 48px;
      height: 48px;
    }

    .admin-card h3 {
      font-size: var(--font-size-base);
    }

    .admin-card__count {
      font-size: var(--font-size-2xl) !important;
    }

    .admin-info {
      grid-template-columns: 1fr;
      gap: var(--space-1);
    }

    .admin-info dt {
      font-weight: var(--font-weight-bold);
      margin-top: var(--space-2);
    }

    .password-form {
      max-width: 100%;
    }
  }

  .admin-info dt {
    font-weight: var(--font-weight-medium);
    color: var(--color-text-secondary);
  }

  .admin-info dd {
    margin: 0;
  }

  .password-form {
    max-width: 400px;
  }

  .form-group {
    margin-bottom: var(--space-4);
  }

  .form-group label {
    display: block;
    font-weight: var(--font-weight-medium);
    margin-bottom: var(--space-1);
  }

  .form-group input {
    width: 100%;
    padding: var(--space-2) var(--space-3);
    border: var(--border-width) solid var(--color-border-light);
    font-size: var(--font-size-base);
  }

  .form-group input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .form-group small {
    display: block;
    margin-top: var(--space-1);
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .form-message {
    padding: var(--space-3);
    margin-bottom: var(--space-4);
    font-size: var(--font-size-sm);
  }

  .form-message.success {
    background: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

  .form-message.error {
    background: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }
</style>

<script>
  document.getElementById('logout-btn')?.addEventListener('click', async () => {
    try {
      await fetch('/api/auth/logout', { method: 'POST' });
      window.location.href = '/admin/login';
    } catch (error) {
      console.error('Logout error:', error);
    }
  });

  document.getElementById('change-password-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target as HTMLFormElement;
    const messageEl = document.getElementById('password-message') as HTMLElement;

    const currentPassword = (form.querySelector('#currentPassword') as HTMLInputElement).value;
    const newPassword = (form.querySelector('#newPassword') as HTMLInputElement).value;
    const confirmPassword = (form.querySelector('#confirmPassword') as HTMLInputElement).value;

    if (newPassword !== confirmPassword) {
      messageEl.textContent = 'Les nouveaux mots de passe ne correspondent pas';
      messageEl.className = 'form-message error';
      messageEl.style.display = 'block';
      return;
    }

    try {
      const formData = new FormData();
      formData.append('currentPassword', currentPassword);
      formData.append('newPassword', newPassword);

      const response = await fetch('/api/auth/change-password', {
        method: 'POST',
        body: formData,
      });

      const data = await response.json();

      if (response.ok) {
        messageEl.textContent = data.message;
        messageEl.className = 'form-message success';
        form.reset();
      } else {
        messageEl.textContent = data.error;
        messageEl.className = 'form-message error';
      }
      messageEl.style.display = 'block';
    } catch (error) {
      messageEl.textContent = 'Une erreur est survenue';
      messageEl.className = 'form-message error';
      messageEl.style.display = 'block';
    }
  });
</script>
